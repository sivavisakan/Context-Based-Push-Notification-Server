<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<servlet>
		<servlet-name>oauth</servlet-name>
		<servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
		<init-param>
			<param-name>org.restlet.application</param-name>
			<param-value>edu.cmu.oauth.MyOauthServer</param-value>
		</init-param>
			<init-param>
			<param-name>org.restlet.clients</param-name>
			<param-value>HTTP HTTPS CLAP RIAP</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>oauth</servlet-name>
		<url-pattern>/oauth/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>proxy</servlet-name>
		<servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
		<init-param>
			<param-name>org.restlet.application</param-name>
			<param-value>edu.cmu.proxyApplication.MyProxyApplication</param-value>
		</init-param>
			<init-param>
			<param-name>org.restlet.clients</param-name>
			<param-value>HTTP HTTPS CLAP RIAP</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>proxy</servlet-name>
		<url-pattern>/proxy/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>protect</servlet-name>
		<servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
		<init-param>
			<param-name>org.restlet.application</param-name>
			<param-value>edu.cmu.protect.MyProtectedApplication</param-value>
		</init-param>
			<init-param>
			<param-name>org.restlet.clients</param-name>
			<param-value>HTTP HTTPS CLAP RIAP</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>protect</servlet-name>
		<url-pattern>/protect/*</url-pattern>
	</servlet-mapping>
	
	 <servlet>
        <servlet-name>sign</servlet-name>
        <servlet-class>edu.cmu.admin.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sign</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Push notification GCm Service!!! -->
    
  <listener>
    <listener-class>
      edu.cmu.push.ApiKeyInitializer
    </listener-class>
  </listener>
  
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>
      edu.cmu.push.RegisterServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UnregisterServlet</servlet-name>
    <servlet-class>
      edu.cmu.push.UnregisterServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>UnregisterServlet</servlet-name>
    <url-pattern>/unregister</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SendAllMessagesServlet</servlet-name>
    <servlet-class>
      edu.cmu.push.SendAllMessagesServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>SendAllMessagesServlet</servlet-name>
    <url-pattern>/sendAll</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>SendMessageServlet</servlet-name>
    <servlet-class>
      edu.cmu.push.SendMessageServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>SendMessageServlet</servlet-name>
    <url-pattern>/send</url-pattern>
  </servlet-mapping>
	
  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>
      edu.cmu.push.HomeServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
    
    
    
</web-app>